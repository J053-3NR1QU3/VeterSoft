<%- include ('partials/_header') %>

<div class="container">
    <br><br><br><br><br>
    <div class="m-0 row justify-content-center">
        <div class="col-auto p-5 text-center">
            <h1>Mascota</h1>
        </div>
    </div>
    <div class="container">
        <a class="btn" href="/mascota"><img src="/Images/flecha.png" width="80" height="80"></a>
        <figcaption> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Regresar</figcaption>
    </div>
    <div class="row mt-5">
        <div class="col md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Mascota</th>
                        <th>Nombre</th>
                        <th>Especie</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    <%if (data) { %>
                        <% for (var i=0; i< data.length; i++) { %>
                            <tr>
                                <td>
                                    <%= (i + 1) %>
                                </td>
                                <td>
                                    <%= data[i].Nombre %>
                                </td>
                                <td>
                                    <%= data[i].Especie %>
                                </td>
                                <td>
                                    <a href="/mascota/historial" class="btn btn-warning">Historial C.</a>
                                    <a href="/mascota/receta" class="btn btn-warning">Receta</a>
                                    <a href="/mascota/consulta" class="btn btn-warning">Consulta</a>
                                </td>
                            </tr>
                            <% } %>
                                <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include ('partials/_footer') %>